/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
        IN a, b, sel;
        OUT out;

        PARTS:
        Not(in=sel, out=nsel);
        And(a=a, b=nsel, out=out0);
        And(a=b, b=sel, out=out1);
        Or(a=out0, b=out1, out=out);
}
